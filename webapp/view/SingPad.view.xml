<core:View	controllerName="SingPadSingPad.controller.SingPad"
			displayBlock="true"
			xmlns="sap.m"
			xmlns:core="sap.ui.core"
			xmlns:mvc="sap.ui.core.mvc"
			xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		
		<pages>
			
			<Page title="{i18n>title}">
				
				<content>
					
					<VBox>
						
						<core:HTML id="html">
							
						</core:HTML>
					</VBox>
					
					<VBox>
						
						<HBox>
							
							<Button id="Signature"	text="Signature"	press="onSign"></Button>
							<Button id="Save"		text="Save" 		press="saveButton"></Button>
							<Button id="clear"		text="Clear"		press="clearButton"></Button>
						</HBox>
					</VBox>
				</content>
			</Page>
		</pages>
	</App>
</core:View>